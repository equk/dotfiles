{
    // Disable telemetry
    "telemetry.telemetryLevel": "off",
    // Font options
    "editor.fontSize": 15,
    "editor.fontWeight": "300",
    "editor.fontFamily": "JetBrains Mono NL",
    "editor.fontLigatures": false,
    // Display whitespace chars for indent
    "editor.renderWhitespace": "boundary",
    // Theme options
    "workbench.colorTheme": "Night Owl",
    "workbench.activityBar.visible": false,
    // Use Alt to show menu bar
    "window.menuBarVisibility": "toggle",
    // ESLint
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    },
    // Format on save
    "editor.formatOnSave": true,
    "[javascript]": {
        "editor.formatOnSave": false,
        "editor.tabSize": 2
    },
    "[vue]": {
        "editor.formatOnSave": false,
        "editor.tabSize": 2
    },
    "[html]": {
        "editor.formatOnSave": false
    },
    "[scss]": {
        "editor.formatOnSave": false
    },
    "[rust]": {
        "editor.formatOnSave": true,
        "editor.tabSize": 4
    },
    // Format Whitespace
    "files.trimTrailingWhitespace": true,
    "editor.trimAutoWhitespace": true,
    // HTML Formatting
    "html.format.wrapLineLength": 0,
    // Rulers
    "editor.rulers": [
        80
    ],
    // Disable Word Wrap
    "editor.wordWrap": "off",
    // Color overrides
    "workbench.colorCustomizations": {
        "editor.selectionBackground": "#0066aa",
        "editor.selectionHighlightBackground": "#991144",
        "statusBar.background": "#007ACC",
        "statusBar.foreground": "#ffffff",
        "statusBarItem.errorBackground": "#dd0000",
        "sideBar.border": "#8655a8",
    },
    // Cursor - 'block', 'line' or 'underline'
    "editor.cursorStyle": "line",
    "editor.cursorWidth": 0,
    "editor.cursorBlinking": "blink",
    // Highlight gutter & current line
    "editor.renderLineHighlight": "all",
    // Hide minimap
    "editor.minimap.enabled": false,
    // Use alacritty as external terminal
    "terminal.external.linuxExec": "alacritty",
    // Use github fonts for markdown preview
    "markdown.preview.fontFamily": "-apple-system,BlinkMacSystemFont,Segoe UI,Helvetica,Arial,sans-serif,Apple Color Emoji,Segoe UI Emoji,Segoe UI Symbol",
    "markdown.preview.fontSize": 16,
    // Use breadcrumbs for symbolpath
    "breadcrumbs.enabled": true,
    "breadcrumbs.symbolPath": "on",
    "breadcrumbs.filePath": "off",
    // Golang
    "go.useLanguageServer": true,
    "go.lintOnSave": "file",
    "go.testOnSave": true,
    "go.autocompleteUnimportedPackages": true,
    // Golang Debugging
    "go.delveConfig": {
        "useApiV1": false,
        "dlvLoadConfig": {
            "followPointers": true,
            "maxVariableRecurse": 3,
            "maxStringLen": 64,
            "maxArrayValues": 64,
            "maxStructFields": -1
        }
    },
    // Rust
    "rust-analyzer.checkOnSave.command": "clippy",
    // Enable json Settings Editor
    "workbench.settings.editor": "json",
    // Use Native Linux Titlebar
    "window.titleBarStyle": "native",
    // Ignore Extension Recommendations
    "extensions.ignoreRecommendations": false,
    // Use Material Icon Theme
    "workbench.iconTheme": "material-icon-theme",
    // Set default formatter for json
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    // Volar vuejs
    // Vetur does not support <script setup> yet
    // Evan You suggests to use Volar
    // re: https://github.com/vuejs/vitepress/pull/137#issuecomment-733868635
    "volar.tsPlugin": true,
    // Reactjs
    "emmet.includeLanguages": {
        "javascript": "javascriptreact"
    },
    // Exclude files in folder view
    // node_modules
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/node_modules": true,
        "/public/**": true
    },
    // Exclude from watched files
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/*/**": true,
        "**/.hg/store/**": true,
        "/target/**": true,
        "/public/**": true
    },
    // Show git changes in gutter
    "scm.diffDecorationsGutterWidth": 2,
    // show three way diff view
    "git.mergeEditor": true,
    // markdown options
    "[markdown]": {
        "editor.wordWrap": "on",
        "editor.quickSuggestions": {
            "comments": "off",
            "strings": "off",
            "other": "off"
        },
        "editor.tabSize": 2
    },
    // Disable italic comments
    // (Overrides styles in workbench.colorTheme)
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": [
                    "comment"
                ],
                "settings": {
                    "fontStyle": ""
                }
            }
        ]
    },
    // css property completion with semicolon
    "css.completion.completePropertyWithSemicolon": true,
    // disable inline debug button for package.json scripts
    "debug.javascript.codelens.npmScripts": "never",
    // disable tab decorations
    "workbench.editor.decorations.colors": false,
    "workbench.editor.decorations.badges": false,
    // disable persistent terminal sessions
    "terminal.integrated.enablePersistentSessions": false,
    // show welcome page on empty editor startup
    "workbench.startupEditor": "welcomePage",
    // jupyter notebook association
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    // use stylua
    "[lua]": {
        "editor.defaultFormatter": "JohnnyMorganz.stylua"
    },
    "stylua.styluaPath": "/usr/bin/stylua",
}